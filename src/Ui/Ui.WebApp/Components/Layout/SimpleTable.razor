@inject HttpClient httpClient

<MudTable Items="@Elements.Take(4)" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>AssetKey</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Position</MudTh>
        <MudTh>Molar mass</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="AssetKey">@context.AssetKey</MudTd>
        <MudTd DataLabel="Availability">@context.Availability</MudTd>
        
        <MudTd DataLabel="Brand">@context.Brand</MudTd>
    </RowTemplate>
</MudTable>

<MudSwitch @bind-Checked="_loading">Show Loading</MudSwitch>

@code {
    private bool _hidePosition;
    private bool _loading;
    private IEnumerable<AssetsManager.Data.Entities.Asset> Elements = new List<AssetsManager.Data.Entities.Asset>();

    protected override async Task OnInitializedAsync()
    {
        Elements = await httpClient.GetFromJsonAsync<List<AssetsManager.Data.Entities.Asset>>("webapi/SimpleTable");
    }

}